  <div class="flex-column ">
    <div class="d-flex justify-content-around border-bottom border-1">
      <form class="m-5 " action="/newUser" method="post">
        <div class="d-flex flex-column">
          <div class="mb-3">
            <label for="name" class="form-label">Nome</label>
            <input type="text" class="form-control" id="name" name="firstName" placeholder="Um dois" required>
          <div class="mb-3">
            <label for="sobrenome" class="form-label">Sobrenome</label>
            <input type="text" class="form-control" id="sobrenome" name="lastName" placeholder="Tres de oliveira quatro" required>
          </div>
          <div class="mb-3">
            <label for="date" class="form-label">Data de Nascimento</label>
            <input type="date" class="form-control" id="date" name="age"  required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="exemplo@gmail.com" required>
          </div>
          <div class="mb-3">
            <label for="senha" class="form-label">Password</label>
            <input type="password" class="form-control" id="senha" name="password" aria-describedby="passwordHelpBlock" minlength="8" maxlength="20" placeholder="8-20 caracteres" pattern="^(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*[#$%&*+-/])[a-zA-Z0-9#$%&*+-/]{8,20}$" required> 
            <div id="passwordHelpBlock" class="form-text">
              Caracteres [a-z][A-Z][0-9][#$%&*+-/]
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn-primary w-100">Cadastrar</button>
          </div>
        </div>
      </form>
    </div>
  </div>